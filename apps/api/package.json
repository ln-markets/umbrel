{
  "name": "api",
  "version": "1.0.0",
  "description": "API for LN Markets app on Umbrel",
  "main": "index.js",
  "author": "Kilian Botrel",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "got": "^11.8.2",
    "ln-service": "^51.10.0",
    "module-alias": "^2.2.2",
    "secp256k1": "^4.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "_moduleAliases": {
    "@srcs": "srcs/",
    "@config": "srcs/config.js",
    "@loaders": "srcs/loaders",
    "@routes": "srcs/routes",
    "@classes": "srcs/classes",
    "@services": "srcs/services",
    "@wrappers": "srcs/wrappers",
    "@middleware": "srcs/middleware"
  },
  "nodemonConfig": {
    "exec": "node srcs/index.js",
    "watch": [
      "srcs/",
      ".env"
    ],
    "ignore": [
      "script",
      "database"
    ],
    "ext": "js,json,yaml,yml"
  }
}

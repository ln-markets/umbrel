{
  "name": "@ln-markets/umbrel-api",
  "version": "2.0.0",
  "description": "API for LN Markets app on Umbrel",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon"
  },
  "type": "module",
  "imports": {
    "#src/*": "./src/*"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "2.2.1",
    "bech32": "2.0.0",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "cors": "2.8.5",
    "express": "4.18.2",
    "helmet": "7.0.0",
    "ln-service": "56.7.1",
    "secp256k1": "5.0.0",
    "tiny-secp256k1": "2.2.2"
  },
  "nodemonConfig": {
    "exec": "node src/index.js",
    "watch": [
      "src/",
      ".env"
    ],
    "ext": "js"
  }
}

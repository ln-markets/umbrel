{
  "name": "ln-markets-umbrell-app",
  "version": "1.0.0",
  "description": "LN Markets Umbrel App Mono Repo",
  "repository": "git@github.com:lnmarkets/umbrel.git",
  "author": "BOTREL Kilian <botrel.kilian1999@gmail.com>",
  "private": true,
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write 'apps/**/*.{js,vue}'",
    "init": "cd dev/infra && ./scripts/init.sh",
    "start": "cd dev && ./scripts/start.sh",
    "stop": "cd dev && ./scripts/stop.sh",
    "lnd-balance": "docker exec --user lnd -it lnmarkets_umbrel_lnd lncli --network='testnet' walletbalance",
    "create-channel": "docker exec --user lnd -it lnmarkets_umbrel_lnd lncli --network='testnet' openchannel '03bae2db4b57738c1ec1ffa1c5e5a4423968cc592b3b39cddf7d495e72919d6431'"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-vue": "^7.20.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "2.2.1"
  }
}
